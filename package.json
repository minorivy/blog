{
	"name": "sass-uglify-env",
	"description": "sass env",
	"authors": "xentok",
	"version": "1.1.0",
	"repository": {},
	"license": "GPL-3.0",
	"main": "main",
	"watch": {
		"sass:build": {
			"patterns": [
				"resources/sass/"
			],
			"extensions": "scss,sass"
		},
		"uglify:build": {
			"patterns": [],
			"extensions": "js"
		}
	},
	"scripts": {
		"sass:build": "node-sass --omit-source-map-url -r ./resources/sass/ --output-style compressed --indent-type tab -o ./web/app/ --omit-source-map",
		"uglify:build": "parallelshell uglifyjs-folder ./path/ -eo ./path/ -x .js",
		"imgemin": "imagemin web/app/uploads/* -o web/app/uploads/ -p pngquant",
		"watch:sass": "npm-watch sass:build",
		"watch:js": "npm-watch uglify:build",
		"watch:all": "parallelshell \"npm run watch:sass\" \"npm run watch:js\""
	},
	"devDependencies": {
		"autoprefixer": "*",
		"browserslist": "*",
		"jquery": "*",
		"node-sass": "*",
		"npm-watch": "*",
		"parallelshell": "^3.0.2",
		"postcss-cli": "*",
		"uglify-js": "*",
		"uglifyjs-folder": "*"
	}
}
